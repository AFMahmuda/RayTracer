#Cornell Box
#size 640 480
size 320 240
#size 160 120
camera 0 0 1 0 0 0 0 1 0 45

output bvh

maxdepth 2


maxverts 3
vertex 0 0 0
vertex 0 1 0
vertex 1 0 0

ambient .1 .1 .1
specular .2 .2 .2
shininess 1
emission 0 0 0

attenuation 1 0.1 0.05

point -1 1 1 0.8 0.8 0.8
directional 0 0 -1 0.3 0.3 0.3

scale .2 .2 .2
translate 1 0 0 

pushTransform
diffuse 1 0 0
tri 0 1 2
popTransform

pushTransform
diffuse 0 1 0 
scale -1 1 1
tri 0 1 2
popTransform

pushTransform
diffuse 0 0 1 
scale -1 -1 1
tri 0 1 2
popTransform

pushTransform
diffuse 1 1 0 
scale 1 -1 1
tri 0 1 2
popTransform

